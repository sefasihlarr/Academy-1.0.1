@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content=" &amp; ">
	<meta name="" content="">
	<meta name="" content="">
	<link rel="shortcut icon" href="/Template/assets/meta_logo_2.png" />

	<link rel="canonical" href="" />

	<title>EKYS - Giriş yap</title>

	<link href="/Template/assets/app.css" rel="stylesheet">
	<link rel="stylesheet" href="/Template/assets/css/custom.css">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link href='https://fonts.googleapis.com/css?family=Work+Sans:300,400,600&Inconsolata:400,700' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
	<link href="https://fonts.googleapis.com/css?family=Arvo&display=swap" rel="stylesheet">
	<link href="/Template/assets/app.css" rel="stylesheet">
	<link href="/Template/assets/css/custom.css" rel="stylesheet">

	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.css">
</head>

<body class="linear-background">
	<main class="d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">
						<div class="text-center mt-4 m-3 w-100 d-flex justify-content-center align-items-center">
							<img src="/Template/assets/images/example-logo.svg" class="logo-sm mr-15">
							<span class="login-page-logo-title">MetaAkdeniz</span>
						</div>

						<div class="card" style="border-radius: 40px;">
							<div class="card-body">
								<div class="text-center mt-4 w-100">
									<img src="/Template/assets/images/text-logo.png" class="w-100">
								</div>
								<div class="m-sm-4">
									@if (TempData["message"] != null)
									{
										<partial name="_resultMessage" model="@(TempData.Get<ResultMessage>("Message"))" />
									}
									<form asp-controller="Account" asp-action="Login" method="post">
										<strong>
											<div class="mb-3">
												<label class="form-label">TC Kimlik Numarası:</label>
												<input class="form-control form-control-lg"  name="UserName"
													   placeholder="TC Kimlik Numaranızı Giriniz:" />
											</div>
											<div class="mb-3">
												<label class="form-label"><strong>Şifre:</strong></label>
												<input class="form-control form-control-lg text-light text-opacity-75"
													   type="password" name="Password" placeholder="Şifrenizi giriniz" />
											</div>
											<div class="">
												<label class="form-check d-flex p-0 text-muted user-select-none"
													   for="customSwitch1">
													<input type="checkbox" class="custom-control-input w-auto mr-3"
														   id="customSwitch1">
													Beni Hatırla
												</label>
											</div>
										</strong>
										<div class="text-center mb-3">
											<button href="Home/Index" class="btn btn-lg btn-primary  w-100"
											   target="_self" type="submit">Giriş yap</button>
											<!-- <button type="submit" class="btn btn-lg btn-primary">Sign in</button> -->
										</div>
										<div class="mb-3 d-flex justify-content-end">
											<a asp-controller="Account" asp-action="ForgotPassword">Şifrenizi mi unuttunuz?</a>
										</div>
										<div class="text-center mt-1">
											<strong>
												Hesabınız yok mu?<a href="kayit_ol.html" target="_self">
													Hemen kayıt
													olun!
												</a>
											</strong>
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>

	<script src="/Template/assets/app.js"></script>
	<script src="/Template/assets/app.js"></script>
	<script src="/Template/"></script>
	<script src="~/lib/jquery/jquery.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.css">
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>

</html>
