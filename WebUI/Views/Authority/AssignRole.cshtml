@using WebUI.Models
@model List< RoleAssingViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center mt-4"><h2><strong>Rol Atama</strong></h2></div>
<div class="container" style="margin:20px 0px 250px 20px">
    <form asp-controller="Authority" asp-action="AssignRole" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">

                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].Name" />
                <div class="row">
                    <div class="col-2"><label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label></div>
                    <div class="col-2"><input type="checkbox" asp-for="@Model[i].Exists" style="position:left;"></div>
                </div>


            </div>
        }
        <br />
        <br />
        <button class="btn btn-primary ml-3" type="submit">Kaydet</button>
    </form>
    <br />
</div>

