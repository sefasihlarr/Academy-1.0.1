                                <div>
                                    <button class="linear-background" style="border:none;color:white;border-radius:15px;width:120%;height:25px" onclick="startExam(@item.Id)">
                                        Başla <i class="bi bi-chevron-right custom-card-icons"></i>
                                    </button>
                                </div>
                               
                                <div>
