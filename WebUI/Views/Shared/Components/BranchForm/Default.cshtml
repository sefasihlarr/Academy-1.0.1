@model BranchModel

@section Scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="popup">
    <div id="myModal" class="modal">
        <div class="modal-content" id="small-modal">
            <div class="row d-flex">
                <div class="col-10">
                    <h3 class="modal-title col-10"><strong> Şube Ekle</strong></h3>
                </div>
                <div class="col-2">
                    <span class="close">&times;</span>
                </div>
            </div>
            <form asp-controller="Branch" asp-action="Create" method="post" id="branchForm">
                <div class="row text-center mt-5 ">
                    <div class="col-12 text-center ">
                        <div class="form-group row d-flex">
                            <label asp-for="Name" class="col-sm-2 col-form-label">Şube Adı</label>

                            <div class="col-sm-10">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <input asp-for="Name"  placeholder="Örneğin:B" class="form-dropdown text-center">
                    
                           
                            </div>
                            <label for="Ders" class="col-sm-2 col-form-label">Durum</label>
                            <div class="col-sm-10">
                                <select class="form-dropdown" asp-for="Condition">
                                    <option value="True">Aktif</option>
                                    <option value="False">Pasif</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <td>
                    <button type="submit" id="cls_btn" class="rapor_button">
                        <strong>Kaydet </strong>
                    </button><br>
                </td>
            </form>
        </div>

    </div>
</div>