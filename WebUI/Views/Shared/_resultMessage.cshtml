@model ResultMessage

<script>
    Swal.fire(
        '@Model.Title',
        '@Model.Message',
        '@Model.Css'
    )
</script>

<script>
    function myFunction(event, itemId) {
        event.preventDefault();
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu öğeyi silmek istediğinizden emin misiniz?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Evet, sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                const form = document.getElementById(`myForm_${itemId}`);
                form.submit();
            }
        });
    }
</script>

